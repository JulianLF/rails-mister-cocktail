<div class="banner mt-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @cocktail.image %>);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
    <%= link_to  "+", cocktail_path(@cocktail), method: 'delete', class:'card-remove-link' %>
  </div>
</div>
<div class="container">
  <div class="row justify-content-between">
    <div class="mt-1">
      <h3>Description</h3>
      <p><%= @cocktail.description %></p>
    </div>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li class="card-ingredient d-flex">
          <p>
            <span>
              <strong><%= dose.ingredient.name %></strong>
            </span>
            <span> - </span>
            <span>
              <%= dose.description %>
            </span>
            <span><%= link_to '+', dose_path(dose), method: 'delete', class: 'remove-link' %></span>
          </p>
        </li>
      <% end %>
    </ul>
  </div>
  <ul>
    <% @cocktail.reviews.each do |review| %>
      <li>
        <%= review.content %>
        <%= '*' * review.rating %>
      </li>
    <% end %>
  </ul>
  <div class="row justify-content-between">
    <div class="row justify-content-center col-6">
      <div class="col-9">
        <h4>Add a Review</h4>
        <%= simple_form_for [@cocktail, @review] do |f| %>
          <%= f.input :content, label: "Content" %>
          <%= f.input :rating, label: "Rating" %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
    <div class="row justify-content-center col-6">
      <div class="col-9">
        <h4>Add an Ingredient</h4>
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.association :ingredient, label: "Ingredient" %>
          <%= f.input :description, label: "Description" %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
